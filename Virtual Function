#include <iostream>
using namespace std;
//Base class
class shape {
public:
   int x, y;
   void get_data(){
       cout << "Enter the two values: ";
       cin >> x >> y;
   }
   virtual void displayArea() = 0;
};
//Derived class triangle
class triangle : public shape {
public:
   void displayArea(){
       cout << "Area of the Triangle is: " << 0.5 * x * y << endl;
   }
};
//Derived class rectangle
class rectangle : public shape {
public:
	void displayArea(){
		cout<<"Area of Rectangle is :" << x * y << endl;
	}
};
int main(){
   shape* ptr;
   triangle t;
   rectangle r;
   ptr = &t;
   ptr->get_data();
   ptr->displayArea();
   ptr = &r;
   ptr->get_data();
   ptr->displayArea();
   return 0;
}
